             xmlns:local="clr-namespace:AccountingWorkingHours"
             DispatcherUnhandledException="App_OnDispatcherUnhandledException"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/WorkerCardStyle.xaml"/>
                <ResourceDictionary Source="Styles/PlaceCardStyle.xaml"/>
                <ResourceDictionary Source="Styles/HeaderStyle.xaml"/>
                <ResourceDictionary Source="Styles/InfoItemStyle.xaml"/>
